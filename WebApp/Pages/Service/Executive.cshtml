@page
@model WebApp.Pages.Service.ExecutiveModel
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>
                        @(Model.isEdit ? "Update Executive" : "Add New Executive")
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="user.UserId" />

                        <div class="mb-3">
                            <label asp-for="user.Name" class="form-label fw-bold"></label>
                            <input asp-for="user.Name" class="form-control" placeholder="Enter user name" />
                            <span asp-validation-for="user.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="user.Email" class="form-label fw-bold"></label>
                            <input asp-for="user.Email" type="email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="user.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="user.Contact" class="form-label fw-bold"></label>
                            <input asp-for="user.Contact" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="user.Contact" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="user.Role" class="form-label fw-bold"></label>
                            <select asp-for="@Model.user.Role" class="form-control" id="Role" required>
                                <option value="">Select Role</option>
                                @foreach (var standard in Model.role)
                                {
                                    <option value="@standard.RoleId">@standard.RoleName</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="userList" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i> @(Model.isEdit ? "Update" : "Save")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        setTimeout(function () {
            const alertEl = document.querySelector(".alert");
            if (alertEl) {
                alertEl.style.transition = "opacity 0.5s ease-out";
                alertEl.style.opacity = "0";
                setTimeout(() => alertEl.remove(), 500); // remove after fade
            }
        }, 4000); // 4 seconds
    </script>
}
