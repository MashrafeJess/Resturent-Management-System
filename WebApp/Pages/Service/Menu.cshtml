@page
@model WebApp.Pages.Service.MenuModel
@{
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container my-5">
    <h2 class="text-center text-primary mb-4">
        <i class="bi bi-basket2-fill me-2"></i> Our Menu
    </h2>

    <div class="row g-4">
        @if (Model.foods != null && Model.foods.Any())
        {
            foreach (var food in Model.foods)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-lg border-0 h-100 rounded-4">
                        @if (!string.IsNullOrEmpty(food.Link))
                        {
                            <img src="@food.Link" class="card-img-top rounded-top-4" alt="@food.FoodName" style="height:200px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded-top-4" style="height:200px;">
                                <i class="bi bi-image text-secondary fs-1"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark fw-bold">@food.FoodName</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-currency-dollar"></i>@food.Price
                            </p>

                            <form method="post" asp-page-handler="AddToCart" class="mt-auto">
                                <input type="hidden" name="FoodId" value="@food.FoodId" />
                                <input type="hidden" name="Price" value="@food.Price" />
                                <div class="input-group mb-3">
                                    <button class="btn btn-outline-secondary" type="button" onclick="decreaseQty(this)">-</button>
                                    <input type="number" name="Qty" value="1" min="1" max="@food.Qty" class="form-control text-center" />
                                    <button class="btn btn-outline-secondary" type="button" onclick="increaseQty(this)">+</button>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-cart-plus me-1"></i> Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted py-5">
                <i class="bi bi-info-circle me-2"></i> No foods available.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function increaseQty(button) {
            const input = button.parentElement.querySelector("input");
            input.value = parseInt(input.value) + 1;
        }

        function decreaseQty(button) {
            const input = button.parentElement.querySelector("input");
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }
    </script>
}
