@page
@model WebApp.Pages.Service.AttendanceModel
@{
    Layout = "_Layout";
}

<div class="container-fluid mb-5">
    <h2 class="text-primary mb-4 text-center">
        <i class="bi bi-people-fill me-2"></i> Employee Attendance
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Serial</th>
                            <th scope="col">Employee Name</th>
                            <th scope="col">Check In</th>
                            <th scope="col">Check Out</th>
                            <th scope="col">Status</th>                           
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sn = 1;
                         }
                        @if(Model.users!=null && Model.users.Any())
                        {
                            @foreach (var employee in Model.users)
                            {
                                <tr>
                                    <td>@sn</td>
                                    <td>@employee.Name</td>
                                    <td>
                                        <form method="post" asp-page-handler="CheckIn">
                                            <input type="hidden" name="UserId" value="@employee.UserId" />
                                            <button class="btn btn-success btn-sm" @(employee.HasChecked==true ? "disabled" : null)>Check In</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" asp-page-handler="CheckOut">
                                            <input type="hidden" name="UserId" value="@employee.UserId" />
                                            <button class="btn btn-danger btn-sm" @((employee.CheckInTime == null || employee.HasChecked==false) ? "disabled" : null)>Check Out</button>
                                        </form>
                                    </td>
                                    @if (employee.HasChecked==true)
                                    {
                                        <td>Present</td>
                                    }
                                    else
                                    {
                                        <td>Absent</td>
                                    }
                                </tr>
                                sn++;
                            }
                        }
                        else
                        {
                            <h1>No rows found!!</h1>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        setTimeout(function () {
            const alertEl = document.querySelector(".alert");
            if (alertEl) {
                alertEl.style.transition = "opacity 0.5s ease-out";
                alertEl.style.opacity = "0";
                setTimeout(() => alertEl.remove(), 500); // remove after fade
            }
        }, 4000); // 4 seconds
    </script>
}