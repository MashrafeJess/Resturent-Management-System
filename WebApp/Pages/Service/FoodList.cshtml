@page
@model WebApp.Pages.Service.FoodListModel
@{
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-basket2-fill me-2"></i> Food List</h5>
            <a class="btn btn-light btn-sm" asp-page="/Service/FoodAdd">
                <i class="bi bi-plus-circle me-1"></i> Add New Food
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle mb-0 text-center">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Image/Link</th>
                            <th scope="col" style="width: 120px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.foods != null && Model.foods.Any())
                        {
                            foreach (var food in Model.foods)
                            {
                                <tr>
                                    <td>@food.FoodName</td>
                                    <td>@food.Price.ToString("C")</td>
                                    <td>@food.Qty</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(food.Link))
                                        {
                                            <a href="@food.Link" target="_blank">View</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-page="/Service/FoodAdd"
                                           asp-route-id="@food.FoodId">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form method="post"
                                              asp-page-handler="DeleteFood"
                                              asp-route-id="@food.FoodId"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">
                                    <i class="bi bi-info-circle me-2"></i> No foods available.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
